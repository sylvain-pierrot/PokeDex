{"ast":null,"code":"import { ref, toRefs, onUnmounted, onMounted, watch } from \"vue\";\nimport { useStore } from \"vuex\";\nimport PokeCard from \"../components/PokeCard.vue\";\nexport default {\n  __name: 'PokedexPage',\n  setup(__props, {\n    expose\n  }) {\n    expose();\n    const searchTerm = ref(\"\");\n    const timer = ref(null);\n    const store = useStore();\n    // const pokemons = ref(store.state.pokemons);\n    const matchs = ref(store.state.matchs);\n    const pokemons = toRefs(store.state.pokemons);\n    // watchs\n    // watch(\n    //   () => store.state.pokemons,\n    //   () => {\n    //     console.log(store.state.pokemons);\n    //     pokemons.value = store.state.pokemons;\n    //   }\n    // );\n    watch(() => store.state.matchs, () => {\n      matchs.value = store.state.matchs;\n    });\n    watch(searchTerm, name => {\n      if (timer.value) {\n        clearTimeout(timer);\n        timer.value = null;\n      }\n      timer.value = setTimeout(async () => {\n        await store.dispatch(\"generateMatchsPokemons\", name);\n      }, 255);\n    });\n\n    // functions\n    async function generateMorePokemons() {\n      if (window.scrollY >= window.scrollMaxY) {\n        await store.dispatch(\"generatePokedex\", false);\n      }\n    }\n    function generatePokedexBySearch(name) {\n      searchTerm.value = name;\n      const evt = new CustomEvent(\"submit\", {\n        bubbles: true,\n        cancelable: true\n      });\n      document.getElementById(\"form\").dispatchEvent(evt);\n    }\n    async function onSubmit(event) {\n      event.preventDefault();\n      if (searchTerm.value === \"\") {\n        window.addEventListener(\"scroll\", generateMorePokemons);\n      } else {\n        window.removeEventListener(\"scroll\", generateMorePokemons);\n      }\n      await store.dispatch(\"generatePokedexBySearch\", searchTerm.value);\n    }\n    async function all() {\n      await store.dispatch(\"generatePokedex\", true);\n      window.addEventListener(\"scroll\", generateMorePokemons);\n    }\n\n    // lifeCyle\n    onMounted(async () => {\n      await store.dispatch(\"generatePokedex\", true);\n      window.addEventListener(\"scroll\", generateMorePokemons);\n    });\n    onUnmounted(() => {\n      window.removeEventListener(\"scroll\", generateMorePokemons);\n    });\n    const __returned__ = {\n      searchTerm,\n      timer,\n      store,\n      matchs,\n      pokemons,\n      generateMorePokemons,\n      generatePokedexBySearch,\n      onSubmit,\n      all,\n      ref,\n      toRefs,\n      onUnmounted,\n      onMounted,\n      watch,\n      useStore,\n      PokeCard\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"mappings":"AA4CA,SAASA,GAAG,EAAEC,MAAM,EAAEC,WAAW,EAAEC,SAAS,EAAEC,KAAK,QAAQ,KAAK;AAChE,SAASC,QAAQ,QAAQ,MAAM;AAC/B,OAAOC,QAAQ,MAAM,4BAA4B;;;;;;;IAEjD,MAAMC,UAAU,GAAGP,GAAG,CAAC,EAAE,CAAC;IAC1B,MAAMQ,KAAK,GAAGR,GAAG,CAAC,IAAI,CAAC;IACvB,MAAMS,KAAK,GAAGJ,QAAQ,EAAE;IACxB;IACA,MAAMK,MAAM,GAAGV,GAAG,CAACS,KAAK,CAACE,KAAK,CAACD,MAAM,CAAC;IAEtC,MAAME,QAAQ,GAAGX,MAAM,CAACQ,KAAK,CAACE,KAAK,CAACC,QAAQ,CAAC;IAC7C;IACA;IACA;IACA;IACA;IACA;IACA;IACA;IACAR,KAAK,CACH,MAAMK,KAAK,CAACE,KAAK,CAACD,MAAM,EACxB,MAAM;MACJA,MAAM,CAACG,KAAK,GAAGJ,KAAK,CAACE,KAAK,CAACD,MAAM;IACnC,CAAC,CACF;IACDN,KAAK,CAACG,UAAU,EAAGO,IAAI,IAAK;MAC1B,IAAIN,KAAK,CAACK,KAAK,EAAE;QACfE,YAAY,CAACP,KAAK,CAAC;QACnBA,KAAK,CAACK,KAAK,GAAG,IAAI;MACpB;MACAL,KAAK,CAACK,KAAK,GAAGG,UAAU,CAAC,YAAY;QACnC,MAAMP,KAAK,CAACQ,QAAQ,CAAC,wBAAwB,EAAEH,IAAI,CAAC;MACtD,CAAC,EAAE,GAAG,CAAC;IACT,CAAC,CAAC;;IAEF;IACA,eAAeI,oBAAoB,GAAG;MACpC,IAAIC,MAAM,CAACC,OAAO,IAAID,MAAM,CAACE,UAAU,EAAE;QACvC,MAAMZ,KAAK,CAACQ,QAAQ,CAAC,iBAAiB,EAAE,KAAK,CAAC;MAChD;IACF;IACA,SAASK,uBAAuB,CAACR,IAAI,EAAE;MACrCP,UAAU,CAACM,KAAK,GAAGC,IAAI;MACvB,MAAMS,GAAG,GAAG,IAAIC,WAAW,CAAC,QAAQ,EAAE;QAAEC,OAAO,EAAE,IAAI;QAAEC,UAAU,EAAE;MAAK,CAAC,CAAC;MAC1EC,QAAQ,CAA