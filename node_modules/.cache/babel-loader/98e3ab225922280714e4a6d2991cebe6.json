{"ast":null,"code":"import { ref, computed, onUnmounted } from 'vue';\nimport { useStore } from 'vuex';\nimport PokeCard from '../components/PokeCard.vue';\nimport { watch } from 'vue';\nexport default {\n  __name: 'HomePage',\n  setup(__props, {\n    expose\n  }) {\n    expose();\n    const searchTerm = ref('');\n    const active = ref(true);\n    const store = useStore();\n    const pokemons = computed(() => {\n      return store.state.pokemons;\n    });\n    store.dispatch('initPokemons');\n    watch(searchTerm, name => {\n      store.dispatch('matchPokemons', name);\n    });\n    function addMorePokemons() {\n      active.value = false;\n      store.dispatch('addPokemons');\n      window.addEventListener('scroll', loadOnScroll);\n    }\n    function loadOnScroll() {\n      if (window.scrollY >= window.scrollMaxY) {\n        addMorePokemons();\n      }\n    }\n\n    // onMounted(() => {  window.addEventListener('scroll', loadOnScroll)})\n    onUnmounted(() => {\n      window.removeEventListener('scroll', loadOnScroll);\n    });\n    const __returned__ = {\n      searchTerm,\n      active,\n      store,\n      pokemons,\n      addMorePokemons,\n      loadOnScroll,\n      ref,\n      computed,\n      onUnmounted,\n      useStore,\n      PokeCard,\n      watch\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"mappings":"AA4BA,SAASA,GAAG,EAAEC,QAAQ,EAAEC,WAAW,QAAQ,KAAK;AAChD,SAASC,QAAQ,QAAQ,MAAM;AAC/B,OAAOC,QAAQ,MAAM,4BAA4B;AACjD,SAASC,KAAK,QAAQ,KAAK;;;;;;;IAE3B,MAAMC,UAAU,GAAGN,GAAG,CAAC,EAAE,CAAC;IAC1B,MAAMO,MAAM,GAAGP,GAAG,CAAC,IAAI,CAAC;IACxB,MAAMQ,KAAK,GAAGL,QAAQ,EAAE;IACxB,MAAMM,QAAQ,GAAGR,QAAQ,CAAC,MAAM;MAAG,OAAOO,KAAK,CAACE,KAAK,CAACD,QAAQ;IAAA,CAAC,CAAC;IAEhED,KAAK,CAACG,QAAQ,CAAC,cAAc,CAAC;IAE9BN,KAAK,CAACC,UAAU,EAAGM,IAAI,IAAK;MACxBJ,KAAK,CAACG,QAAQ,CAAC,eAAe,EAAEC,IAAI,CAAC;IACzC,CAAC,CAAC;IACF,SAASC,eAAe,GAAG;MACvBN,MAAM,CAACO